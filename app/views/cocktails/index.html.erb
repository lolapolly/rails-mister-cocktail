<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
<ul style="list-style: none">
  <li><%= link_to cocktail.name, cocktail_path(cocktail)%>
    <%= link_to '- delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
</ul>

<% end %>

<%= link_to "Create a new cocktail", new_cocktail_path  %>

