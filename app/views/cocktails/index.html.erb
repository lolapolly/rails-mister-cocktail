<header class="banner">
  <div class="cocktail-logo">
    <%= image_tag "cocktail_2.png", alt: "logo", class:"logo" %>
  </div>

  <div class="text-box">
    <h1 class="heading-primary" >
      <span class="heading-primary-main"> Cocktail world</span>
      <span class="heading-primary-sub"> Create your own cocktails and become a master</span>
    </h1>

    <%= link_to new_cocktail_path, class:"btn btn-white-border" do %>
        <i class="fas fa-plus" style="font:$headers-font;"> Create a new cocktail</i>
    <% end %>
  </div>
</header>

<section class="section-cocktails">
  <div>
    <h2 class="heading-primary-sub pink">
      Explore our cocktails and add your touch with new ingredients
    </h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.url %>
          <div class="card">
            <div class="card side front">
              <div class="card_picture" style="background-image: linear-gradient(to right, #FFAF7B, #D76D77, #3A1C71), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">">
                     &nbsp;
              </div>
              <h4 class="card_heading">
               <span class="card_heading">
                 <%= link_to cocktail.name, cocktail_path(cocktail)%>
               </span>

              </h4>
              <div class="card_details">
                <ul>
                  <li>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nemo sed, eum minima provident autem asperiores nesciunt. Distinctio ex, facilis excepturi recusandae atque, vero, quaerat, veniam hic impedit tenetur quas! Eum. </li>
                  <li>  <%= link_to cocktail, method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                  </li>
                </ul>



            <% else %>
               <div class="card">
                 <div class="card side front">
                  <div class="card_picture" style="background-image: linear-gradient(to right, #FFAF7B, #D76D77, #3A1C71), url('https://images.pexels.com/photos/68672/beach-beverage-caribbean-cocktail-68672.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500')">">
                    &nbsp;
                  </div>
                   <h4 class="card_heading">
                    <span class="card_heading">
                      <%= link_to cocktail.name, cocktail_path(cocktail)%>
                    </span>

                   </h4>
                   <div class="card_details">
                     <ul>
                       <li>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nemo sed, eum minima provident autem asperiores nesciunt. Distinctio ex, facilis excepturi recusandae atque, vero, quaerat, veniam hic impedit tenetur quas! Eum. </li>
                       <li>  <%= link_to cocktail, method: :delete, data: { confirm: 'Are you sure?' } do %>
                               <i class="fas fa-trash"></i>
                             <% end %>
                       </li>
                     </ul>
              <% end %>

            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          2 of 3

        </div>
      </div>
      <div class="col">
        <div class="card">
        3 of 3

        </div>
      </div>
      <% end %>
    </div>
  </div>


</section>





