    <div class="container mx-3">
      <br>
      <h3>Add an ingredient</h3>
        <%= simple_form_for [@cocktail, @dose] do |f|%>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add an ingredient", class: "button-purple-border"%>
        <% end %>
        <br>
      <%= link_to "Back", root_path %>
